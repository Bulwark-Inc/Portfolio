{
  "name": "theme",
  "version": "3.8.0",
  "description": "",
  "scripts": {
    "start": "npm run dev",
    "build": "npm run build:clean && npm run build:tailwind && npm run build:js",
    "build:clean": "rimraf ../static/css/dist",
    "build:tailwind": "cross-env NODE_ENV=production tailwindcss --postcss -i ./src/styles.css -o ../static/css/dist/styles.css --minify",
    "build:js": "esbuild src/main.js --bundle --outfile=../static/js/dist/main.js --minify",
    "dev": "npm-run-all --parallel dev:tailwind watch:js",
    "dev:tailwind": "cross-env NODE_ENV=development tailwindcss --postcss -i ./src/styles.css -o ../static/css/dist/styles.css -w",
    "watch:js": "esbuild src/main.js --bundle --outfile=../static/js/dist/main.js --watch",
    "tailwindcss": "node ./node_modules/tailwindcss/lib/cli.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "postcss-simple-vars": "^7.0.1",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "alpinejs": "^3.14.9"
  }
}
